<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:TuneShelf.ViewModels"
    xmlns:conv="using:TuneShelf.Converters"
        x:Class="TuneShelf.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        mc:Ignorable="d"
        d:DesignWidth="1920"
        d:DesignHeight="1080"
        Width="1920"
        Height="1080"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Window.Resources>
        <conv:DurationConverter x:Key="DurationConverter" />
        <conv:IndexToBoolConverter x:Key="IndexToBoolConverter" />
        <conv:IndexToBackgroundConverter x:Key="IndexToBackgroundConverter" />
        <conv:IndexToForegroundConverter x:Key="IndexToForegroundConverter" />
        <conv:BoolInverseConverter x:Key="BoolInverseConverter" />
        <conv:NullToBoolConverter x:Key="NullToBoolConverter" />
        <conv:NullToColumnSpanConverter x:Key="NullToColumnSpanConverter" />
    </Window.Resources>

    <Grid RowDefinitions="*,Auto" ColumnDefinitions="260,*">
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" ColumnDefinitions="260,*">
            <!-- Ð›ÐµÐ²Ð¾Ðµ Ð½Ð°Ð²Ð¸Ð³Ð°Ñ†Ð¸Ð¾Ð½Ð½Ð¾Ðµ Ð¼ÐµÐ½ÑŽ -->
            <Border Grid.Column="0"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0"
                    Padding="18">
                <StackPanel Spacing="12">
                    <TextBlock Classes="title" Text="TuneShelf" />
                    <TextBlock Text="Music library" Foreground="{StaticResource TextBrush}" Opacity="0.8" />

                    <StackPanel Margin="0,12,0,0" Spacing="6">
                        <Button Content="Ð¢Ñ€ÐµÐºÐ¸" Command="{Binding NavigateToTracksCommand}" HorizontalAlignment="Stretch" Padding="8"
                                Background="{Binding SelectedTabIndex, Converter={StaticResource IndexToBackgroundConverter}, ConverterParameter=0}"
                                Foreground="{Binding SelectedTabIndex, Converter={StaticResource IndexToForegroundConverter}, ConverterParameter=0}"
                                BorderThickness="0" />

                        <Button Content="ÐÐ»ÑŒÐ±Ð¾Ð¼Ñ‹" Command="{Binding NavigateToAlbumsCommand}" HorizontalAlignment="Stretch" Padding="8"
                                Background="{Binding SelectedTabIndex, Converter={StaticResource IndexToBackgroundConverter}, ConverterParameter=1}"
                                Foreground="{Binding SelectedTabIndex, Converter={StaticResource IndexToForegroundConverter}, ConverterParameter=1}"
                                BorderThickness="0" />

                        <Button Content="ÐÑ€Ñ‚Ð¸ÑÑ‚Ñ‹" Command="{Binding NavigateToArtistsCommand}" HorizontalAlignment="Stretch" Padding="8"
                                Background="{Binding SelectedTabIndex, Converter={StaticResource IndexToBackgroundConverter}, ConverterParameter=2}"
                                Foreground="{Binding SelectedTabIndex, Converter={StaticResource IndexToForegroundConverter}, ConverterParameter=2}"
                                BorderThickness="0" />

                        <Button Content="ÐŸÐ»ÐµÐ¹Ð»Ð¸ÑÑ‚Ñ‹" Command="{Binding NavigateToPlaylistsCommand}" HorizontalAlignment="Stretch" Padding="8"
                            Background="{Binding SelectedTabIndex, Converter={StaticResource IndexToBackgroundConverter}, ConverterParameter=3}"
                            Foreground="{Binding SelectedTabIndex, Converter={StaticResource IndexToForegroundConverter}, ConverterParameter=3}"
                            BorderThickness="0" />
                    </StackPanel>

                    <Border Background="{StaticResource SurfaceBrush}" CornerRadius="6" Padding="10" Margin="0,18,0,0">
                        <StackPanel>
                            <TextBlock Text="Quick Actions" Foreground="{StaticResource TextBrush}" FontWeight="SemiBold" />
                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                <Button Content="âž• Add" Command="{Binding AddTrackCommand}" Padding="6" Background="{StaticResource PrimaryBrush}" Foreground="White" BorderThickness="0" />
                                <Button Content="ðŸ”„ Refresh all" Command="{Binding RefreshAllCommand}" Padding="6" Background="Transparent" Foreground="{StaticResource TextBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <CheckBox Content="Show only tracks of selected album"
                              IsChecked="{Binding ShowOnlySelectedAlbumTracks}"
                              Margin="0,10,0,0" />
                    <CheckBox Content="Only show albums of selected artist"
                              IsChecked="{Binding AlbumsVm.ShowOnlySelectedArtistAlbums}"
                              Margin="0,10,0,0" />
                </StackPanel>
            </Border>

            <!-- ÐžÑÐ½Ð¾Ð²Ð½Ð¾Ðµ ÑÐ¾Ð´ÐµÑ€Ð¶Ð¸Ð¼Ð¾Ðµ -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*" Margin="0">
                <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº Ð¿Ñ€Ð¸Ð»Ð¾Ð¶ÐµÐ½Ð¸Ñ -->
                <Border Grid.Row="0" 
                        Background="{StaticResource SurfaceBrush}"
                        Padding="16"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="0,0,0,1">
                    <DockPanel LastChildFill="True">
                        <TextBlock Text="{Binding Title}"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   DockPanel.Dock="Left" />

                        <!-- Header right-side controls removed: search box and profile button -->
                    </DockPanel>
                </Border>

                <!-- Content panels controlled by left navigation -->
                <Grid Grid.Row="1" Margin="12">
                    <!-- Tracks panel -->
                    <Border IsVisible="{Binding SelectedTabIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=0}" Background="Transparent">
                        <Grid RowDefinitions="Auto,Auto,Auto,*" Margin="20">
                            <!-- ÐŸÐ¾Ð¸ÑÐº -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,8">
                                <TextBlock Text="ÐŸÐ¾Ð¸ÑÐº:" 
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           Foreground="{StaticResource TextBrush}"
                                           Margin="0,0,10,0" />
                                <TextBox Width="300"
                                         Watermark="ÐÐ°Ð·Ð²Ð°Ð½Ð¸Ðµ Ð¸Ð»Ð¸ Ð¶Ð°Ð½Ñ€..."
                                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="14" />
                            </StackPanel>

                            <!-- Ð¤Ð¸Ð»ÑŒÑ‚Ñ€Ñ‹ -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="15" Margin="0,0,0,8">
                                <TextBlock Text="Ð–Ð°Ð½Ñ€:" 
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           Foreground="{StaticResource TextBrush}"
                                           Margin="0,0,10,0" />
                                <ComboBox Width="180"
                                          ItemsSource="{Binding AvailableGenres}"
                                          SelectedItem="{Binding SelectedGenreFilter}"
                                          FontSize="14" />

                                <TextBlock Text="Ð ÐµÐ¹Ñ‚Ð¸Ð½Ð³:" 
                                           VerticalAlignment="Center"
                                           FontSize="14"
                                           Foreground="{StaticResource TextBrush}"
                                           Margin="20,0,10,0" />
                                <TextBox Width="80"
                                         Watermark="ÐœÐ¸Ð½"
                                         Text="{Binding MinRating, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="14" />
                                <TextBlock Text="â€”" 
                                           VerticalAlignment="Center"
                                           Margin="5,0" />
                                <TextBox Width="80"
                                         Watermark="ÐœÐ°ÐºÑ"
                                         Text="{Binding MaxRating, UpdateSourceTrigger=PropertyChanged}"
                                         FontSize="14" />
                            </StackPanel>

                            <!-- ÐšÐ½Ð¾Ð¿ÐºÐ¸ Ð´ÐµÐ¹ÑÑ‚Ð²Ð¸Ð¹ -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,0,0,8">
                                <Button Content="â–¶"
                                        Command="{Binding PlaySelectedTrackCommand}"
                                        Padding="15,8"
                                        FontSize="14"
                                        Cursor="Hand" />
                                <Button Content="â¹"
                                        Command="{Binding StopPlaybackCommand}"
                                        Padding="15,8"
                                        FontSize="14"
                                        Cursor="Hand" />
                                
                                <Button Content="âž•" Command="{Binding AddTrackCommand}" Padding="12" />
                                <Button Content="âœï¸" Command="{Binding UpdateTrackCommand}" Padding="12" />
                                <Button Content="ðŸ—‘ï¸" Command="{Binding DeleteTrackCommand}" Padding="12" />
                                <Button Content="ðŸ”„" Command="{Binding RefreshAllCommand}" Padding="12" Margin="20,0,0,0" />
                            </StackPanel>

                            <!-- Ð¢Ð°Ð±Ð»Ð¸Ñ†Ð° Ñ‚Ñ€ÐµÐºÐ¾Ð² -->
                            <DataGrid Grid.Row="3"
                                      ItemsSource="{Binding Tracks}"
                                      SelectedItem="{Binding SelectedTrack, Mode=TwoWay}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      SelectionMode="Single"
                                      CanUserReorderColumns="False"
                                      CanUserResizeColumns="True"
                                      RowHeight="42"
                                      Background="{StaticResource BackgroundBrush}"
                                      BorderBrush="{StaticResource BorderBrush}"
                                      BorderThickness="1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="1*" />
                                    <DataGridTextColumn Header="Artist" Binding="{Binding Album.Artist.Name}" />
                                    <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="200" />
                                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration, Converter={StaticResource DurationConverter}}" Width="120" />
                                    <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="120" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Albums panel -->
                    <Border IsVisible="{Binding SelectedTabIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=1}" Background="Transparent">
                        <Grid RowDefinitions="Auto,Auto,*" Margin="20">
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                                <TextBlock Text="Album search:" VerticalAlignment="Center" />
                                <TextBox Width="250" Watermark="Title or year" Text="{Binding AlbumsVm.AlbumSearchQuery, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" Margin="0,0,0,8">
                                <Button Content="âž•" Command="{Binding AlbumsVm.CreateAlbumCommand}" Padding="12" />
                                <Button Content="âœï¸" Command="{Binding AlbumsVm.EditAlbumCommand}" Padding="12" />
                                <Button Content="ðŸ—‘ï¸" Command="{Binding AlbumsVm.DeleteAlbumCommand}" Padding="12" />
                                <Button Content="ðŸ”„" Command="{Binding AlbumsVm.LoadAlbumsCommand}" Padding="12" Margin="20,0,0,0" />
                            </StackPanel>

                            <DataGrid Grid.Row="2"
                                      ItemsSource="{Binding AlbumsVm.AlbumsEx}"
                                      SelectedItem="{Binding AlbumsVm.SelectedAlbumDisplay, Mode=TwoWay}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      SelectionMode="Single"
                                      CanUserReorderColumns="False"
                                      CanUserResizeColumns="True"
                                      RowHeight="42"
                                      Background="{StaticResource BackgroundBrush}"
                                      BorderBrush="{StaticResource BorderBrush}"
                                      BorderThickness="1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*" />
                                    <DataGridTextColumn Header="Artist" Binding="{Binding ArtistName}" Width="240" />
                                    <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="120" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Artists -->
                    <Border IsVisible="{Binding SelectedTabIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=2}" Background="Transparent">
                        <Grid RowDefinitions="Auto,Auto,*" Margin="20">
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,8">
                                <TextBlock Text="ÐŸÐ¾Ð¸ÑÐº:" VerticalAlignment="Center" />
                                <TextBox Width="250" Watermark="Ð˜Ð¼Ñ Ð°Ñ€Ñ‚Ð¸ÑÑ‚Ð°..." Text="{Binding ArtistsVm.ArtistSearchQuery, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" Margin="0,0,0,8">
                                <Button Content="âž•" Command="{Binding ArtistsVm.CreateArtistCommand}" Padding="12" />
                                <Button Content="âœï¸" Command="{Binding ArtistsVm.EditArtistCommand}" Padding="12" />
                                <Button Content="ðŸ—‘ï¸" Command="{Binding ArtistsVm.DeleteArtistCommand}" Padding="12" />
                                <Button Content="ðŸ”„" Command="{Binding ArtistsVm.LoadArtistsCommand}" Padding="12" Margin="20,0,0,0" />
                            </StackPanel>

                            <DataGrid Grid.Row="2"
                                      ItemsSource="{Binding ArtistsVm.ArtistsEx}"
                                      SelectedItem="{Binding ArtistsVm.SelectedArtistDisplay, Mode=TwoWay}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      SelectionMode="Single"
                                      RowHeight="42"
                                      Background="{StaticResource BackgroundBrush}"
                                      BorderBrush="{StaticResource BorderBrush}"
                                      BorderThickness="1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                                    <DataGridTextColumn Header="Albums" Binding="{Binding AlbumCount}" Width="120" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <!-- Playlists -->
                    <Border IsVisible="{Binding SelectedTabIndex, Converter={StaticResource IndexToBoolConverter}, ConverterParameter=3}" Background="Transparent">
                        <Grid ColumnDefinitions="1*,Auto,1*" RowDefinitions="Auto,*" Margin="20">
                            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,8">
                                <Button Content="âž•" Command="{Binding PlaylistsVm.CreatePlaylistCommand}" Padding="12" />
                                <Button Content="âœï¸" Command="{Binding PlaylistsVm.EditPlaylistCommand}" Padding="12" />
                                <Button Content="ðŸ—‘ï¸" Command="{Binding PlaylistsVm.DeletePlaylistCommand}" Padding="12" />
                                <Button Content="ðŸ”„" Command="{Binding PlaylistsVm.LoadPlaylistsCommand}" Padding="12" Margin="20,0,0,0" />
                            </StackPanel>

                            <!-- Playlists list (visible when not editing) -->
                            <DataGrid Grid.Column="0" Grid.Row="1"
                                      Grid.ColumnSpan="{Binding PlaylistsVm.SelectedPlaylist, Converter={StaticResource NullToColumnSpanConverter}}"
                                      ItemsSource="{Binding PlaylistsVm.PlaylistsEx}"
                                      SelectedItem="{Binding PlaylistsVm.SelectedPlaylistDisplay, Mode=TwoWay}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      IsVisible="{Binding PlaylistsVm.IsEditing, Converter={StaticResource BoolInverseConverter}}"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      SelectionMode="Single"
                                      RowHeight="42"
                                      Background="{StaticResource BackgroundBrush}"
                                      BorderBrush="{StaticResource BorderBrush}"
                                      BorderThickness="1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*" />
                                    <DataGridTextColumn Header="Tracks" Binding="{Binding TrackCount}" Width="120" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Library tracks (visible when editing) -->
                            <DataGrid Grid.Column="0" Grid.Row="1"
                                      Grid.ColumnSpan="{Binding PlaylistsVm.SelectedPlaylist, Converter={StaticResource NullToColumnSpanConverter}}"
                                      ItemsSource="{Binding Tracks}"
                                      SelectedItem="{Binding PlaylistsVm.SelectedTrackInLibrary, Mode=TwoWay}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      IsVisible="{Binding PlaylistsVm.IsEditing}"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      SelectionMode="Single"
                                      RowHeight="42"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"
                                      Background="{StaticResource BackgroundBrush}"
                                      BorderBrush="{StaticResource BorderBrush}"
                                      BorderThickness="1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*" />
                                    <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="140" />
                                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration, Converter={StaticResource DurationConverter}}" Width="110" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <!-- Add/Remove buttons (visible when editing) -->
                            <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" IsVisible="{Binding PlaylistsVm.IsEditing}"
                                        Margin="0,0,0,8">
                                <Button Content="â†’" Command="{Binding PlaylistsVm.AddTrackToPlaylistCommand}" Margin="6" Width="44" Height="36" />
                                <Button Content="â†" Command="{Binding PlaylistsVm.RemoveTrackFromPlaylistCommand}" Margin="6" Width="44" Height="36" />
                            </StackPanel>
                            
                            <Grid Grid.Column="2" Grid.Row="1"
                                  RowDefinitions="Auto,*"
                                  Margin="20,0,0,0"
                                  IsVisible="{Binding PlaylistsVm.SelectedPlaylist,
                                  Converter={StaticResource NullToBoolConverter}}">

                                <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº + ÐºÐ½Ð¾Ð¿ÐºÐ¸ -->
                                <Grid Grid.Row="0" ColumnDefinitions="Auto,1*,Auto,Auto" VerticalAlignment="Center">
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="6">
                                        <TextBlock Text="{Binding PlaylistsVm.SelectedPlaylistDisplay.Name}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextBrush}" />
                                        <TextBlock Text=" â€“ " Foreground="{StaticResource TextBrush}" />
                                        <TextBlock Text="{Binding PlaylistsVm.SelectedPlaylistDisplay.Description}"
                                                   Foreground="{StaticResource TextBrush}"
                                                   Opacity="0.9" />
                                    </StackPanel>

                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Spacing="8">
                                        <Button Content="Edit"
                                                Command="{Binding PlaylistsVm.EnterEditModeCommand}"
                                                IsVisible="{Binding PlaylistsVm.IsEditing, Converter={StaticResource BoolInverseConverter}}" />
                                        <Button Content="Apply"
                                                Command="{Binding PlaylistsVm.ApplyEditCommand}"
                                                IsVisible="{Binding PlaylistsVm.IsEditing}" />
                                        <Button Content="Cancel"
                                                Command="{Binding PlaylistsVm.CancelEditCommand}"
                                                IsVisible="{Binding PlaylistsVm.IsEditing}" />
                                    </StackPanel>

                                    <Button Grid.Column="2"
                                            Content="â–¶"
                                            Command="{Binding PlaylistsVm.PlaySelectedInPlaylistCommand}"
                                            Padding="10,6"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Right" />

                                    <Button Grid.Column="3"
                                            Content="â¹"
                                            Command="{Binding StopPlaybackCommand}"
                                            Padding="10,6"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Right" />
                                </Grid>

                                <!-- Ð¢Ñ€ÐµÐºÐ¸ Ð²Ñ‹Ð±Ñ€Ð°Ð½Ð½Ð¾Ð³Ð¾ Ð¿Ð»ÐµÐ¹Ð»Ð¸ÑÑ‚Ð° -->
                                <DataGrid Grid.Row="1"
                                          ItemsSource="{Binding PlaylistsVm.PlaylistTracks}"
                                          SelectedItem="{Binding PlaylistsVm.SelectedTrackInPlaylist, Mode=TwoWay}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          GridLinesVisibility="Horizontal"
                                          HeadersVisibility="Column"
                                          RowHeight="42"
                                          Background="{StaticResource BackgroundBrush}"
                                          BorderBrush="{StaticResource BorderBrush}"
                                          BorderThickness="1">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" />
                                        <DataGridTextColumn Header="Artist" Binding="{Binding Album.Artist.Name }" />
                                        <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="140" />
                                        <DataGridTextColumn Header="Duration"
                                                            Binding="{Binding Duration, Converter={StaticResource DurationConverter}}"
                                                            Width="110" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
        
        <!-- Ð¼Ð¸Ð½Ð¸ Ð¿Ð»ÐµÐµÑ€ -->
        <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                BorderThickness="0,1,0,0"
                BorderBrush="{StaticResource BorderBrush}"
                Padding="10,6"
                IsVisible="{Binding MiniPlayer.IsVisible}">
            <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                <!-- ÐšÐ½Ð¾Ð¿ÐºÐ¸ -->
                <StackPanel Orientation="Horizontal" Spacing="8" Grid.Column="0">
                    <Button Content="â®"
                            Command="{Binding MiniPlayer.PreviousCommand}" />
                    <Button Content="â¯"
                            Command="{Binding MiniPlayer.PlayPauseCommand}" />
                    <Button Content="â¹"
                            Command="{Binding MiniPlayer.StopCommand}" />
                    <Button Content="â­"
                            Command="{Binding MiniPlayer.NextCommand}" />
                </StackPanel>

                <!-- Ð˜Ð½Ñ„Ð¾Ñ€Ð¼Ð°Ñ†Ð¸Ñ Ð¾ Ñ‚Ñ€ÐµÐºÐµ -->
                <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            Margin="16,0"
                            VerticalAlignment="Center">
                    <TextBlock Text="{Binding MiniPlayer.Line1}"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextBrush}" />
                    <TextBlock Text="{Binding MiniPlayer.Line2}"
                               Foreground="{StaticResource TextBrush}"
                               Opacity="0.8"
                               FontSize="12" />
                </StackPanel>

                <!-- ÐœÐµÑÑ‚Ð¾ Ð¿Ð¾Ð´ Ð¿Ñ€Ð¾Ð³Ñ€ÐµÑÑ-Ð±Ð°Ñ€, ÐµÑÐ»Ð¸ Ð·Ð°Ñ…Ð¾Ñ‡ÐµÑˆÑŒ -->
                <!--<Slider Grid.Column="2" Minimum="0" Maximum="100" />-->
            </Grid>
        </Border>
    </Grid>

    <Window.Styles>
        <Style Selector="TextBlock.title">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
        </Style>
        <Style Selector="TabControl">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        </Style>
        <Style Selector="TabItem">
            <Setter Property="Background" Value="{StaticResource PanelBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style Selector="TabItem:selected">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="TabItem:pointerover">
            <Setter Property="Background" Value="{StaticResource BorderBrush}" />
        </Style>
        <Style Selector="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="{StaticResource ControlCornerRadius}" />
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#005A9E" />
        </Style>
        <Style Selector="Button:disabled">
            <Setter Property="Background" Value="{StaticResource BorderBrush}" />
            <Setter Property="Foreground" Value="#808080" />
        </Style>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,6" />
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <Style Selector="DataGrid">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
        </Style>
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
            <Setter Property="Foreground" Value="{StaticResource TextBrush}" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
    </Window.Styles>
</Window>